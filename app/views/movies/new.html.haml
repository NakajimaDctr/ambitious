.new
  .new__thumbnail
    #thumbnail
  = form_for @movie, { class: 'new__form' } do |f|

    //エラーメッセージ表示（URL未入力の場合表示される想定）
    - if @movie.errors.any?
      .new__errors
        - @movie.errors.full_messages.each do |message|
          = icon("fas", "exclamation-circle", class: "new__error-icon")
          = message

    %table.new__form__table
      %tr
        %th
          動画URL
        %td{colspan: "3"}
          = f.text_field :url
      %tr
        %th 
          区分
        %td
          %label
            = f.radio_button :category, "ステージ"
            ステージ
          %label
            = f.radio_button :category, "クロース"
            クロース
          %label
            = f.radio_button :category, "サロン"
            サロン
        %th
          曲タイトル
        %td
          = f.text_field :music_title
      %tr
        %th
          種目・アイテム
        %td
          = f.text_field :item
        %th
          アーティスト
        %td
          = f.text_field :music_artist
      %tr
        %th
          学生／プロ・アマ
        %td
          %label
            = f.radio_button :performer_status, "学生"
            学生
          %label
            = f.radio_button :performer_status, "プロ・アマ"
            プロ・アマ
        %th
          出演・受賞
        %td
          = f.text_field :performed_at
      %tr
        %th
          演者名
        %td
          = f.text_field :performer_name
        %th
          タグ
        %td
          = f.text_field :tags
    .new__form__submits
      .new__form__submits__create
        = button_tag type: "submit", class: "new__form__submits__create__btn" do
          = icon("fas", "plus", class: "new__form__submits__create__btn__plus-icon")
          登録
      .new__form__submits__back
        = link_to root_path, class: "new__form__submits__back__btn" do
          = icon("fas", "arrow-left", class: "new__form__submits__back__btn__icon")
          戻る
