.show
  .show__thumbnail
    #thumbnail
  %table.show__table
    %tr
      %th
        動画URL
      %td{colspan: "3"}
        = @movie.url
        %input{type: "hidden", id: "movie_url", value: @movie.url}/
    %tr
      %th
        区分
      %td
        = @movie.category
      %th
        曲タイトル
      %td
        = @movie.music_title
    %tr
      %th
        種目・アイテム
      %td
        = @movie.item
      %th
        アーティスト
      %td
        = @movie.music_artist
    %tr
      %th
        学生／プロ・アマ
      %td
        = @movie.performer_status
      %th
        出演・受賞
      %td
        = @movie.performed_at
    %tr
      %th
        演者名
      %td
        = @movie.performer_name
      %th
        タグ
      %td
        = @movie.tags
